{
  "compilerOptions": {
    "rootDirs": ["src", "__jest__"],
    "outDir": "build",
    "lib": ["dom", "esnext"],
    "typeRoots": ["node_modules/@types", "src/types"],
    "target": "es5",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./src",
    "paths": {
      "@components/*": ["components/*"],
      "@constants/*": ["constants/*"],
      "@hooks/*": ["hooks/*"],
      "@utils/*": ["utils/*"],
      "@assets/*": ["assets/*"],
      "@store/*": ["store/*"],
      "@types/*": ["types/*"],
      "@src/*": ["*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build", "coverage", "*.config.js"]
}
